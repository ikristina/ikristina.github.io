---
// Mermaid diagram component
---

<div class="mermaid-container">
  <div class="mermaid">
    <slot />
  </div>
</div>

<script>
  import('https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs').then(({ default: mermaid }) => {
    mermaid.initialize({ 
      startOnLoad: true,
      theme: 'default',
      securityLevel: 'loose'
    });
    mermaid.run();
  });
</script>

<style>
  .mermaid-container {
    margin: 2rem 0;
    text-align: center;
  }
  
  .mermaid {
    background: #f9f9f9;
    border-radius: 8px;
    padding: 1rem;
    overflow-x: auto;
  }
</style>